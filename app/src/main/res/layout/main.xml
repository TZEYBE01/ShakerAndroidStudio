<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="1"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:paddingTop="10dip"
        android:stretchColumns="*" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency contact for automated help requests:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/apptheme_color" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone" />

        <TableRow>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:max="@integer/raw_gravity_max2"
                android:progress="@integer/raw_gravity_default" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="\nFall Sensitivity"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/apptheme_color" />

        </TableRow>

        <TableRow>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center"
        android:paddingTop="0dip"
        android:text="EE-193 WIN Motion Detection Project"
        android:textColor="@color/apptheme_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="12"
        android:max="@integer/walk_thres_max" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="11"
        android:max="@integer/run_thres_max" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="102dp"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_row="11"
        android:text="Run sensitivity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/apptheme_color" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="101dp"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_row="12"
        android:text="Walk sensitivity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/apptheme_color" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="6"
        android:text="Device name:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/apptheme_color" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="199dp"
        android:layout_height="33dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="6"
        android:ems="10"
        android:text="Default"
        android:textSize="@dimen/smalltext" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Server:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/apptheme_color" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="3"
        android:contentDescription="localhost"
        android:ems="10"
        android:text="http://localhost:8080"
        android:textSize="@dimen/smalltext" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:id="@+id/linelay"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="15"
        android:orientation="vertical" >
    </LinearLayout>

    <CheckBox
        android:id="@+id/muteCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="15"
        android:text="Sound?" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="15"
        android:text="Is webserver?" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_row="15"
        android:gravity="center"
        android:text="ToggleButton"
        android:textOff="RUN"
        android:textOn="STOP" />

</GridLayout>